---
import AdminLayout from '@/layouts/AdminLayout.astro';
import productsData from '@/data/products.json';

// Updated Product Interface
interface ProductDetails {
    inspiration?: string;
    history?: string;
    materials?: string;
    features?: string;
    dimensions?: string;
}
interface Product {
    id: string;
    name: string;
    slug: string;
    price: number;
    description: string;
    category: string;
    imageUrl: string;
    imageGallery: string[];
    details: ProductDetails;
    isLimited: boolean;
}

const products: Product[] = productsData;
---

<AdminLayout title="Dashboard">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <a href="/admin/orders" class="block p-6 bg-naksh-dark border border-naksh-medium/50 rounded hover:bg-naksh-medium/30 transition-colors">
      <h2 class="text-xl font-semibold text-naksh-highlight mb-2">Manage Orders</h2>
      <p class="text-sm text-naksh-dim">View and update customer orders.</p>
    </a>

    <a href="/admin/products" class="block p-6 bg-naksh-dark border border-naksh-medium/50 rounded hover:bg-naksh-medium/30 transition-colors">
      <h2 class="text-xl font-semibold text-naksh-highlight mb-2">Manage Products</h2>
      <p class="text-sm text-naksh-dim">Add, edit, or remove products.</p>
    </a>
  </div>
</AdminLayout> 