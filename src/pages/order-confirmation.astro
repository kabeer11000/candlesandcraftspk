import BaseLayout from '@/layouts/BaseLayout.astro';

// Get order ID from query params (client-side)
---
<BaseLayout title="Order Confirmation">
    <div class="container mx-auto px-4 py-16 md:py-24 text-center">
        <div class="max-w-2xl mx-auto">
            <svg class="w-16 h-16 mx-auto text-green-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <h1 class="text-3xl md:text-4xl font-bold font-serif text-naksh-light mb-4 tracking-tight">Thank You!</h1>
            <p class="text-lg text-naksh-dim mb-6">Your order has been placed successfully.</p>
            <p class="text-naksh-dim text-sm mb-8">Your order ID is: <span id="order-id" class="font-mono text-naksh-light">Loading...</span></p>
            <p class="text-naksh-dim text-sm mb-8">You will pay <strong class="text-naksh-light">Cash on Delivery</strong> when your order arrives.</p>

            <div class="mt-10">
                <a href="/shop" class="inline-block text-sm font-mono uppercase tracking-widest text-naksh-blue hover:text-blue-400 transition-colors group">
                    Continue Shopping <span class="inline-block transition-transform duration-200 group-hover:translate-x-1">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    // Get order ID from URL and display it
    const params = new URLSearchParams(window.location.search);
    const orderId = params.get('orderId');
    const orderIdElement = document.getElementById('order-id');

    if (orderIdElement) {
        orderIdElement.textContent = orderId || 'N/A';
    }
</script> 