interface InstagramPost {
  id: string;
  media_url: string;
  permalink: string;
  caption: string;
  timestamp: string;
}

// Placeholder data - replace with real API call
const posts: InstagramPost[] = [
  {
    id: '1',
    media_url: 'https://via.placeholder.com/400x400',
    permalink: 'https://instagram.com/p/1',
    caption: 'Beautiful handmade candles',
    timestamp: '2024-04-19T10:00:00Z'
  },
  {
    id: '2',
    media_url: 'https://via.placeholder.com/400x400',
    permalink: 'https://instagram.com/p/2',
    caption: 'New collection coming soon',
    timestamp: '2024-04-18T15:30:00Z'
  },
  {
    id: '3',
    media_url: 'https://via.placeholder.com/400x400',
