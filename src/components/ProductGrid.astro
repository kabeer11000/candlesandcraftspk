---
import ProductCard from '@/components/ProductCard.astro';

// Updated Product Interface
interface ProductDetails {
    inspiration?: string;
    history?: string;
    materials?: string;
    features?: string;
    dimensions?: string;
}
interface Product {
    id: string;
    name: string;
    slug: string;
    price: number;
    description: string;
    category: string;
    imageUrl: string;
    imageGallery: string[];
    details: ProductDetails;
    isLimited: boolean;
}

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---
<div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-2 xl:gap-x-8">
  {products.map((product) => (
    <ProductCard product={product} />
  ))}
</div> 